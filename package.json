{
  "name": "microservice-template",
  "version": "1.0.0",
  "description": "TypeScript micro service template including options for restful and event driven end points and logging",
  "main": "server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "compliance:tslint": "tslint -c tslint.json -p tsconfig.json",
    "compliance:gpl": "exit $( yarn licenses ls | grep -v 'LGPL' | grep -c 'GPL' )",
    "security:snyk": "snyk test",
    "security:outdated-packages": "npm outdated",
    "security:vulnerable-packages": "nsp check",
    "test": "env NODE_TLS_REJECT_UNAUTHORIZED=0 nyc mocha --recursive -r ts-node/register \"test/**/*.spec.ts\"",
    "test:unit": "env NODE_TLS_REJECT_UNAUTHORIZED=0 nyc mocha --recursive -r ts-node/register \"test/unit/**/*.spec.ts\"",
    "test:integration": "env NODE_TLS_REJECT_UNAUTHORIZED=0 mocha --recursive -r ts-node/register \"test/integration/**/*.spec.ts\""
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "dist/*.*",
      "dist/**/*.*",
      "build/*.*",
      "coverage/**/*.*",
      "src/server.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "author": "Gary Dutton",
  "license": "MIT",
  "dependencies": {
    "amqplib": "0.x.x",
    "assert": "^1.4.1",
    "body-parser": "1.x.x",
    "bunyan": "1.x.x",
    "cookie-parser": "^1.x.x",
    "deep-diff": "0.x.x",
    "express": "4.x.x",
    "express-boom": "2.x.x",
    "helmet": "3.x.x",
    "joi": "13.x.x",
    "json-stringify-safe": "5.x.x",
    "lodash": "4.x.x",
    "morgan": "1.x.x",
    "request": "2.x.x",
    "request-promise": "4.x.x",
    "superagent": "^3.8.2",
    "uuid": "3.x.x"
  },
  "devDependencies": {
    "@types/amqplib": "0.x.x",
    "@types/body-parser": "1.x.x",
    "@types/bunyan": "1.x.x",
    "@types/chai": "^4.1.2",
    "@types/cookie-parser": "^1.x.x",
    "@types/deep-diff": "0.x.x",
    "@types/express": "4.x.x",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.37",
    "@types/joi": "13.x.x",
    "@types/json-stringify-safe": "5.x.x",
    "@types/lodash": "4.x.x",
    "@types/mocha": "^2.2.48",
    "@types/morgan": "1.x.x",
    "@types/node": "^9.x.x",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "2.x.x",
    "@types/request-promise": "4.x.x",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "3.x.x",
    "chai": "^4.1.2",
    "express-validator": "^5.0.0",
    "mocha": "^5.0.0",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "rewire": "^3.0.2",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "snyk": "^1.69.7",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "typings": "^2.1.1"
  }
}
